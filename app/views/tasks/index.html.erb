<div class="list">
  <h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
    <li>
      <% if task.completed == true %>
        <%= "✔" %>
      <% else %>
        <%= "⬜️"%>
      <% end %>

      <%= link_to task.title, task_path(task) %>
    - <%= link_to "🗑", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete this task?"} %>
    </li>
    <% end %>
  </ul>
    <div class="line"></div>
  <div class="link">
  <%= link_to "➕ Add a new task", new_task_path %>
  </div>
</div>
